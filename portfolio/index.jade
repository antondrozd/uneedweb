							a.details-link(href="/portfolio/gambling")
								button.details-button(type="button")
									span Details
									span.icon
										include ../icons/arrow-go
				.project.social-travel.web
					.project-background
					.overlay
					.project-content
						.project-header
							h2.type Web Development
							.name Travel
						.project-footer
							.description Creation of an engaging travel-oriented social network service with an embedded e-commerce platform.
							a.details-link(href="/portfolio/social-travel")
								button.details-button(type="button")
									span Details
									span.icon
										include ../icons/arrow-go
				.project.localisation.web.design
					.project-background
					.overlay
					.project-content
						.project-header
							h2.type Web Development
							.name Data Management
						.project-footer
							.description Localisation helper: a software that eases the translation of an online sports application into multiple languages.
							a.details-link(href="/portfolio/localisation")
								button.details-button(type="button")
