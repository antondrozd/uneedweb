doctype html
html(lang="en")
	include ../parts/head
	+head("Portfolio | UNeed Web", "Web development projects, mobile development projects, product design", "Find out our track record of high quality tech solutions for web and mobile development, web design and more.")
	body#portfolio-page
		include ../parts/header
		include ../parts/mobile-nav

		section#description
			.container
				.section-top
					h1.title.dark Portfolio
					h2.sub-title We have a proven track record of building high-quality solutions for customers all over the world. Browse through our case studies and see projects that we have implemented.

		section#switcher
			#switch-left
				a(onclick="uneed.onPrevPortfolioFilter()")
					include ../icons/left-arrow
			a#all-filter.active(onclick="uneed.onChangePortfolioFilter('all')")
				h2.sub-title All
			a#web-filter(onclick="uneed.onChangePortfolioFilter('web')")
				h2.sub-title Web Development
			a#mobile-filter(onclick="uneed.onChangePortfolioFilter('mobile')")
				h2.sub-title Mobile Development
			a#design-filter(onclick="uneed.onChangePortfolioFilter('design')")
				h2.sub-title Product Design
			#switch-right
				a(onclick="uneed.onNextPortfolioFilter()")
					include ../icons/left-arrow

		section#projects.all-filter
			.container
				.project.travel.web
					.project-background
					.overlay
					.project-content
						.project-header
							h2.type Web Development
							.name Travel
						.project-footer
							.description Development of a web application for a travel company with a complete 			customer planning journey features.
							a.details-link(href="/portfolio/travel")
								button.details-button(type="button")
									span Details
									span.icon
										include ../icons/arrow-go
				.project.sport.web
					.project-background
					.overlay
					.project-content
						.project-header
							h2.type Web Development
							.name Entertainment
						.project-footer
							.description Development a web application for a sports betting company for the audience of 5 million users.
							a.details-link(href="/portfolio/sport")
