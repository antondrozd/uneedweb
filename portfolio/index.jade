					.overlay
					.project-content
						.project-header
							h2.type Mobile Development
							.name Travel
						.project-footer
							.description Our own mobile application that keeps track of the places you visit and shows your exploration progress.
							a.details-link(href="/portfolio/yow")
								button.details-button(type="button")
									span Details
									span.icon
										include ../icons/arrow-go
				.project.banking.web
