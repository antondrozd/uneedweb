mixin head(title, keywords, description)
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		meta(name="description" content="#{description}")
		meta(name="keywords" content="#{keywords}")
		meta(name="author" content="Kirill Buga")
		meta(name="google-site-verification" content="LwQQ9t3gqtSzXa3rmNyxen3Nav8qoGwgHGP3B-5yMbo")
		meta(name="apple-mobile-web-app-title" content="uneedweb")
		meta(name="application-name" content="uneedweb")
		meta(name="theme-color" content="#ffffff")
		title #{title}
		link(href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,700" rel="stylesheet")
		link(href="/css/index.css" rel="stylesheet")
		link(rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png")
		link(rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png")
		link(rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png")
		link(rel="manifest" href="/manifest.json")
		link(rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5")