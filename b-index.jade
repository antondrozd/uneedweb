		script.
			(function() {
				var navMain = document.querySelector('.main-nav'),
						navToggle = document.querySelector('.main-nav__toggle');

				navMain.classList.remove('main-nav--nojs');

				navToggle.addEventListener('click', function() {
					if (navMain.classList.contains('main-nav--closed')) {
						navMain.classList.remove('main-nav--closed');
						navMain.classList.add('main-nav--opened');
					} else {
						navMain.classList.remove('main-nav--opened');
						navMain.classList.add('main-nav--closed');
					}
				});
			})();

			(function () {
				var slider = document.querySelector('.slider'),
						slidesWrapper = slider.querySelector('.slider__slides-wrapper'),
						slideItems = slider.querySelectorAll('.slider__slide'),
						slidesCount = slideItems.length,
						sliderStepValue = 100/slidesCount,
						slideCurrent = 1,
						slideName = slider.querySelectorAll('.slider__slide-name'),
						sliderPrev = slider.querySelector('.slider__switch-btn--prev'),
						sliderNext = slider.querySelector('.slider__switch-btn--next'),
						sliderDots = slider.querySelectorAll('.slider__dot');

				//- slideItems.forEach(function(item, index) {
				//- 	slideItems[index].setAttribute('data-index', index+1);
				//- });

				function slideChange(index) {
					var	sliderTransValue = (index-1)*sliderStepValue;
					slidesWrapper.style.transform = 'translateX(-'+sliderTransValue+'%)';
					sliderDots[slideCurrent-1].classList.remove('slider__dot--active');
					sliderDots[index-1].classList.add('slider__dot--active');
					slideName[slideCurrent-1].classList.remove('slider__slide-name--active');
					slideName[index-1].classList.add('slider__slide-name--active');
					slideCurrent = index;
					//- console.log(slideCurrent);
				};

				sliderPrev.addEventListener('click', function() { 
					if (slideCurrent > 1) {
						slideChange(slideCurrent-1);
					}
				});

				sliderNext.addEventListener('click', function() {
					if (slideCurrent < slidesCount) {
						slideChange(slideCurrent+1);
					}
				});

				sliderDots.forEach(function(item, index) {
					sliderDots[index].addEventListener('click', function() {
						slideChange(index+1);
					});
				});
			})();