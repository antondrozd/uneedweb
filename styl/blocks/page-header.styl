.page-header
	&--main
		box-sizing border-box
		height 100%
		min-height 500px
		font-family $main-font
		background-image url("../photos/landing-small.jpg")
		background-repeat no-repeat
		background-size cover

.page-header__wrapper
	wrapper()
	position relative
	box-sizing border-box
	height 100%
	padding-top 12rem
	
.page-header__logo
	position absolute
	top 1.25rem
	left 0
	
.page-header__title
	padding 0
	margin 0
	margin-bottom 1.25rem
	font-size 30px
	font-weight 300
	text-align center
	color #fff
	
.page-header__text
	font-size 16px
	font-weight 400
	line-height 1.5
	text-align center
	color #8492af
	
.page-header__scroll-btn
	position absolute
	bottom 0
	left 50%
	transform translateX(-50%)
	display flex
	width 5rem
	height 5rem
	align-items flex-start
	justify-content center
	svg
		animation jumping 1.5s ease infinite