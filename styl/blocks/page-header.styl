.page-header
	&--main
		box-sizing border-box
		height 100%
		min-height 500px
		font-family $main-font
		background-image url("../photos/landing-small.jpg")
		background-repeat no-repeat
		background-size cover
	&--project
		min-height 17rem
		background-repeat no-repeat
	&--on-game
		background-image url("../photos/on-game/bg.jpg")
		background-size 300%
		background-position center

.page-header__wrapper
	wrapper()
	position relative
	display flex
	flex-direction column
	justify-content center
	box-sizing border-box
	height 100%
	
.page-header__logo
	position absolute
	top 1.25rem
	left 0
	
.page-header__title
	padding 0
	margin 0
	margin-bottom 1.25rem
	font-size 30px
	font-weight 300
	text-align center
	color #fff
	
.page-header__text
	padding 0
	margin 0
	font-size 16px
	font-weight 400
	line-height 1.5
	text-align center
	color #8492af
	
.page-header__scroll-btn
	position absolute
	bottom 0
	left 50%
	transform translateX(-50%)
	display flex
	width 5rem
	height 5rem
	align-items flex-start
	justify-content center
	svg
		animation jumping 1.5s ease infinite
		
@media $tablet-widths
	
	.page-header__title
		font-size 48px
		
	.page-header__text
		padding-right 7rem
		padding-left 7rem
		font-size 18px