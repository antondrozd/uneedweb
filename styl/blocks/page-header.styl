.page-header
	font-family $main-font
	background-repeat no-repeat
	&--hp
		box-sizing border-box
		height 100%
		min-height 500px
		background-color rgba($main-color, 0.9)
		background-image url("../photos/landing-small.jpg")
		background-size cover
		
	&--services-slide,
	&--project
		height 350px
		background-color rgba($main-color, 0.9)
		background-image url("../photos/landing-small.jpg")
		background-size cover
		background-position center
	
	&--project-trawell
		min-height 17rem
		
	&--project-on-game
		min-height 17rem
		background-image url("../photos/on-game/bg-1.jpg")
		background-size cover
		background-position center
		
	&--project-yow
		min-height 17rem
		background-image url("../photos/yow/yow-top-background.png")
		background-size 150%
		background-position top right 40%

.page-header__wrapper
	wrapper-fluid()
	position relative
	display flex
	flex-direction column
	justify-content center
	box-sizing border-box
	height 100%
	
.page-header__logo
	position absolute
	top 1.25rem
	left 0
	
.page-header__title
	padding 0
	margin 0
	margin-bottom 1.25rem
	font-size 30px
	font-weight 300
	text-align center
	color #fff
	
.page-header__text
	padding 0
	margin 0
	font-size 16px
	font-weight 400
	line-height 1.5
	text-align center
	color #8492af
	
.page-header__scroll-btn
	position absolute
	bottom 0
	left 50%
	transform translateX(-50%)
	display flex
	width 5rem
	height 5rem
	align-items flex-start
	justify-content center
	svg
		animation jumping 1.5s ease infinite
		*
			transition all $transition-duration
	&:hover
		svg
			*
				fill #fff
		
@media $tablet-widths

	.page-header
		&--project-trawell
			min-height 22rem
			
		&--project-yow
			min-height 22rem
			background-size 100%
			background-position top
	
	.page-header__title
		font-size 48px
		
	.page-header__text
		max-width 44rem
		margin 0 auto
		font-size 18px
		
@media $desktop-widths

	.page-header
		&--hp
			max-height 1100px
		&--project-yow
			background-position left top -60px