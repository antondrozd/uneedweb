.portfolio-item
	display flex
	flex-direction column
	align-items center
	justify-content center
	padding-bottom 20rem
	background-repeat no-repeat
	background-size 100%
	&--web
		background-image url("../images/png/hp-1-web.png")
		background-position center bottom 5rem
		max-bg-size(450px, 530px)
	&--mobile
		background-image url("../images/png/hp-2-mobile.png")
		background-position center bottom
		max-bg-size(290px, 340px)
	&--design
		background-image url("../images/png/hp-3-design.png")
		background-position center bottom 2rem
		background-size 272px

.portfolio-item__descr
	margin-top 1rem
	margin-bottom 1rem
	font-size 14px
	line-height 1.38
	letter-spacing 0.3px
	text-align center
	color #8492af
	
.portfolio-item__btn
	display none
		
@media $tablet-widths

	.portfolio-item
		padding-bottom 23rem
		&--mobile
			background-position center bottom 2rem
		
@media $desktop-widths

	.portfolio-item
		align-items flex-start
		min-height 320px
		padding-bottom 0
		&--web
			background-position right -6rem top 3rem
			background-size 500px
		&--mobile
			background-position right 1rem top 1rem
		&--design
			background-position right center
		
	.portfolio-item__descr
		width 26rem
		text-align left
		
	.portfolio-item__tags
		justify-content flex-start
		width 26rem
		margin-right 0
		margin-left 0
		
	.portfolio-item__btn
		display block
		margin-top 4rem