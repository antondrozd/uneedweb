.input-box
	input, textarea
		box-sizing border-box
		width: 100%
		padding 1rem
		font-family $main-font
		font-size 13px
		font-weight 400
		letter-spacing 0.3px
		color #576076
		background-color transparent
		border-radius 4px
		border solid 1px rgba(#576076, 0.5)
		outline none
		transition all $transition-duration
		&::placeholder
			color rgba(87, 96, 118, 0.5)
			transition all 0.5s
		&:hover
			border-color #576076
		&:focus
			border-color #576076
			&::placeholder
				opacity 0
	textarea
		resize none
	&--with-btn-right
		display flex
		input
			position relative
			left 2px
			z-index 1
		button
			position relative
			right 2px
			z-index 2