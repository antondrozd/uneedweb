.main-nav
	font-family $main-font
	
	&--hp,
	&--project,
	&--services-slide
		background-color transparent // scroll up - $main-color
		.main-nav__list
			background-color rgba($main-color, 0.97)
	&--services,
	&--portfolio,
	&--contact-us
		background-color $main-color
		.main-nav__list
			background-color rgba($main-color, 0.97)
	&--project-on-game
		background-color transparent // scroll up - $main-color--on-game
		.main-nav__list
			background-color rgba($main-color--on-game, 0.97)
			
	&--top
		position absolute
		display flex
		align-items center
		justify-content center
		width 100%
		min-height 5.5rem
		z-index 2
		.main-nav__list
			position fixed
			top 0
			left 0
			flex-direction column
			width 100vw
			height 100vh
			padding-top 4rem
			z-index 3
			transition all $transition-duration ease
			
		.main-nav__item
			a
				text-transform uppercase
				text-align center

	&--footer
		.main-nav__list
			display flex
			flex-direction column

.main-nav__wrapper
	width 85%
	margin 0 auto
	display flex
	align-items center
	justify-content space-between

.main-nav__toggle
	display none
	
.main-nav__list
	ul-reset()
	display flex
	
.main-nav__item
	a
		display block
		padding-top 1rem
		padding-bottom 1rem
		font-size 16px
		letter-spacing 0.3px
		text-decoration none
		color #8492af
		transition all $transition-duration
		&:hover, &:active
			color #c3cee4

@media $mobile-widths-only

	.main-nav
		&--closed
			.main-nav__toggle
				&::before
					content ""
					position absolute
					top 16px
					left 50%
					transform translateX(-50%)
					width 2.3rem
					height 4px
					background-color #fff
					border-radius 2px
					box-shadow 0 10px 0 0 #fff, 0 20px 0 0 #fff

			.main-nav__list
				opacity 0
				transform translateY(-100%)

		&--opened
			.main-nav__toggle
				position fixed
				&::before,
				&::after
					content ""
					position absolute
					top 50%
					left 50%
					width 2rem
					height 4px
					background-color #fff
					border-radius 2px
				&::before
					transform translate(-50%, -50%) rotate(45deg)
					box-shadow none      
				&::after
					transform translate(-50%, -50%) rotate(-45deg)

			.main-nav__list
				opacity 1
				transform translateY(0)
				
	.main-nav__toggle
		position absolute
		right 5%
		display block
		width 63px
		height 55px
		margin 0
		padding 0
		font-size 0
		background-color transparent
		border none
		z-index 4
		&::before, &::after
			transition all $transition-duration

@media $tablet-widths

	.main-nav
		&--top
			.main-nav__list
				position static
				flex-direction row
				justify-content space-between
				width 17rem
				height auto
				padding-top 0
				background-color transparent
				opacity 1
				transform none
				transition none
				
			.main-nav__item
				a
					position relative
					padding 0 0.5rem
					font-size 15px
					text-transform none
					letter-spacing 0.3px
					color #ffffff
					&::after
						content ""
						position absolute
						height 2px
						left 0
						bottom -10px
						width 0
						right 0
						margin auto
						transition width $transition-duration ease
						background-image linear-gradient(to left, #ec523e, #4444b9)	
					&:hover
						&::after
							width 100%
							
@media $desktop-widths

	.main-nav
		&--top
			min-height 7rem
		&--footer
			.main-nav__list-wrapper
				display flex
				justify-content center
				
			.main-nav__list
				flex-direction row
				flex-wrap wrap
				
			.main-nav__item
				margin-right 1.5rem
				a
					padding 0