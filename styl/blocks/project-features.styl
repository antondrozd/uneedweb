.project-features
	background-image linear-gradient(to bottom, #ffe244, #d7bb0e)
	
.project-features__list
	ul-reset()
	
.project-features__item
	position relative
	padding-bottom 1rem
	padding-top 4rem
	&:nth-child(n+2)
		padding-top 7.8rem
		.project-features__icon-wrapper
			top 55px
			&::before
				content ""
				position absolute
				bottom 120%
				left 43%
				width 2px
				height 47px
				background-color #555
	

.project-features__icon-wrapper
	position absolute
	top 0
	left 51%
	transform translateX(-51%)
	
	
.project-features__item-title
	padding 0
	margin 0
	margin-bottom 0.5rem
	font-size 18px
	font-weight 400
	letter-spacing 0.4px
	text-align center
	color #555555

.project-features__item-descr
	padding 0
	margin 0
	font-size 14px
	font-weight 300
	letter-spacing 0.3px
	text-align center
	color #555555