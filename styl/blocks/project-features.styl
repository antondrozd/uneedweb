$animation-delay-step = 0.3s

.project-features
	background-repeat no-repeat
	background-size cover
	&--on-game
		background-image linear-gradient(to bottom, #ffe244, #d7bb0e)
		.project-features__item
			&:nth-child(n+2)
				padding-top 7.8rem
				.project-features__icon-wrapper
					top 55px
					&::before
						content ""
						position absolute
						bottom 120%
						left 43%
						width 2px
						height 47px
						background-color #555
						
		.project-features__icon-wrapper
			left 51%
			transform translateX(-51%)
			
		.project-features__item-title
			color #555
			
		.project-features__item-descr
			color #555
	&--yow
		background-image url("../photos/yow/yow-features-bg.jpg")
		.project-features__title
			color #fff
		.project-features__text
			color #fff
		.project-features__item
			padding-top 6rem
		.project-features__item-title
			color #fff
		.project-features__item-descr
			color #fff
			
.project-features__title
	margin-bottom 6rem
	
.project-features__text
	display none

.project-features__list
	ul-reset()
	wrapper-fluid()
	display flex
	flex-direction column
	
.project-features__item
	position relative
	padding-bottom 3rem
	padding-top 4rem
	&:last-child
		padding-bottom 0
	for num in (1..3)
		&:nth-child({num})
			.project-features__icon-wrapper
				animation-delay $animation-delay-step*num

.project-features__icon-wrapper
	position absolute
	top 0
	left 50%
	transform translateX(-50%)
	
.project-features__item-title
	padding 0
	margin 0
	margin-bottom 0.5rem
	font-size 18px
	font-weight 400
	letter-spacing 0.4px
	text-align center

.project-features__item-descr
	padding 0
	margin 0
	font-size 14px
	font-weight 300
	letter-spacing 0.3px
	text-align center
	
@media $tablet-widths

	.project-features
		&--on-game
			.project-features__list
				position relative
				box-sizing border-box
				width 26rem
				
			.project-features__item
				position relative
				padding-top 0
				padding-bottom 3.2rem
				padding-left 4.5rem
				&::before
					content ""
					position absolute
					width 2px
					height 25%
					top 0
					left 22px
					background-color #555
				&::after
					content ""
					position absolute
					width 2px
					height 25%
					bottom 0
					left 22px
					background-color #555
				&:nth-child(n+2)
					padding-top 0
					.project-features__icon-wrapper
						top 50%
						left 0
						&::before 
							display none
				&:nth-child(1)
					.project-features__icon-wrapper
						left 5px
				&:nth-child(3)
					.project-features__icon-wrapper
						left 5px
			
			.project-features__icon-wrapper
				left 0
				top 50%
				transform translateX(0) translateY(-50%)
				
			.project-features__item-title
				text-align left
				
			.project-features__item-descr
				text-align left
				
	.project-features__title
		margin-bottom 2rem
		
	.project-features__text
		display block
		margin-bottom 3rem

	.project-features__list
		width 14rem
		
	.project-features__item-descr
		padding 0
		margin 0
		font-size 14px
		font-weight 300
		letter-spacing 0.3px
		text-align center
					
@media $desktop-widths

	.project-features
		&--on-game
			.project-features__list
				width $desktop-wrapper-width
	
			.project-features__item
				padding-top 4.5rem
				padding-bottom 0
				padding-left 0
				&::before, &::after
					display none
				&:nth-child(n+2)
					padding-top 4.5rem
					padding-left 0
				&:nth-child(1)
					.project-features__icon-wrapper
						top 0
						left 50%
						transform translateX(-50%)
						&::before
							display none
							
				&:nth-child(2)
					.project-features__icon-wrapper
						top 0
						left 50%
						transform translateX(-50%)
						&::before
							display block
							top 50%
							left 150%
							width 21rem
							height 2px
							transform translateY(-50%)
						&::after
							content ""
							position absolute
							top 50%
							right 150%
							width 21rem
							height 2px
							background-color #555
							transform translateY(-50%)
							
				&:nth-child(3)
					.project-features__icon-wrapper
						top 0
						left 50%
						transform translateX(-50%)
						&::before, &::after
							display none
							
			.project-features__text
				margin-bottom 4.3rem
						
			.project-features__item-title
				text-align center
	
			.project-features__item-descr
				text-align center
						
	.project-features__list
		flex-direction row
		justify-content space-between
		width $desktop-wrapper-width
		
	.project-features__item
		width 18.5rem
		margin-bottom 0
		
	.project-features__icon-wrapper
		top 0
		left 50%
		transform translateX(-50%)
		
	.project-features__item-title
		text-align center
		
	.project-features__item-descr
		text-align center