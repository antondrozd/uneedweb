.project-features
	background-image linear-gradient(to bottom, #ffe244, #d7bb0e)
	&--on-game
		.project-features__item
			&:nth-child(n+2)
				padding-top 7.8rem
				.project-features__icon-wrapper
					top 55px
					&::before
						content ""
						position absolute
						bottom 120%
						left 43%
						width 2px
						height 47px
						background-color #555
						
		.project-features__icon-wrapper
			left 51%
			transform translateX(-51%)
			
		.project-features__item-title
			color #555
			
		.project-features__item-descr
			color #555
	
.project-features__list
	ul-reset()
	wrapper-fluid()
	display flex
	flex-direction column
	
.project-features__item
	position relative
	padding-bottom 1rem
	padding-top 4rem

.project-features__icon-wrapper
	position absolute
	top 0
	left 50%
	transform translateX(-50%)
	
	
.project-features__item-title
	padding 0
	margin 0
	margin-bottom 0.5rem
	font-size 18px
	font-weight 400
	letter-spacing 0.4px
	text-align center

.project-features__item-descr
	padding 0
	margin 0
	font-size 14px
	font-weight 300
	letter-spacing 0.3px
	text-align center
	
@media $tablet-widths

	.project-features
		&--on-game
			.project-features__list
				position relative
				box-sizing border-box
				width 26rem
				&::before
					content ""
					position absolute
					top 0
					left 22px
					height 100%
					border-left 2px solid #555
				
			.project-features__item
				padding-top 0
				padding-bottom 0
				padding-left 4.5rem
				margin-bottom 3.2rem
				&:nth-child(n+2)
					padding-top 0
					.project-features__icon-wrapper
						top 50%
						left 0
						height 40%
						&::before
							width 100%
							height 100%
							top 0
							left 0
							background-color transparent
				&:nth-child(1)
					.project-features__icon-wrapper
						left 5px
				// &:nth-child(2)
				// 	.project-features__icon-wrapper
				// 		top 35%
				&:nth-child(3)
					.project-features__icon-wrapper
						// top 10%
						left 5px
			
			.project-features__icon-wrapper
				left 0
				top 50%
				height 40%
				transform translateX(0) translateY(-50%)
				&::before
					width 100%
					height 100%
					top 0
					left 0
					background-color transparent
				
			.project-features__item-title
				text-align left
				
			.project-features__item-descr
				text-align left
				
@media $desktop-widths

	.project-features
		&--on-game
			.project-features__list
				width 1130px
	
			.project-features__item
				padding-top 4.5rem
				padding-left 0
				margin-bottom 0
				&:nth-child(n+2)
					padding-top 4.5rem
					padding-left 0
				&:nth-child(1)
					.project-features__icon-wrapper
						top 0
						left 50%
						transform translateX(-50%)
						&::before
							display none
							
				&:nth-child(2)
					.project-features__icon-wrapper
						top 0
						left 50%
						transform translateX(-50%)
						&::before
							top 50%
							left 150%
							width 20rem
							height 2px
							transform translateY(-50%)
						&::after
							content ""
							position absolute
							top 50%
							right 150%
							width 20rem
							height 2px
							background-color #555
							transform translateY(-50%)
							
				&:nth-child(3)
					.project-features__icon-wrapper
						top 0
						left 50%
						transform translateX(-50%)
						&::before, &::after
							display none
						
			.project-features__item-title
				text-align center
	
			.project-features__item-descr
				text-align center
						
	.project-features__list
		flex-direction row
		justify-content space-between
		width 1240px
		
	.project-features__item
		width 18.5rem
		margin-bottom 0
		
	.project-features__icon-wrapper
		top 0
		left 50%
		transform translateX(-50%)
		
	.project-features__item-title
		text-align center
		
	.project-features__item-descr
		text-align center