.projects-reverse-block
	overflow hidden
	font-family $main-font
	&--grey-gradient
		background-image linear-gradient(to bottom, #f6f7fa, #ffffff)
	
.projects-reverse-block__section
	padding-bottom 5rem
	&--with-padding-top
		padding-top 5rem
	
.projects-reverse-block__title
	padding 0
	margin 0
	margin-bottom 1.25rem
	font-size 30px
	font-weight 300
	text-align center
	color #0e1a35
	
.projects-reverse-block__text
	padding 0
	margin 0 auto
	max-width 85%
	font-size 16px
	font-weight 400
	line-height 1.33
	text-align center
	color #8492af
	
.projects-reverse-block__decorative-img
	background-repeat no-repeat
	background-position center
	&--yow-1
		height 280px
		margin-bottom 2rem
		background-image url("../images/yow/about-image.png")
		background-size contain
	&--yow-2
		height 280px
		margin-bottom 4.3rem
		background-image url("../images/yow/share-image.png")
		background-size contain
		
@media $tablet-widths

	.projects-reverse-block__title
		font-size 48px
	
	.projects-reverse-block__text	
		max-width 41rem
		font-size 18px
		
	.projects-reverse-block__decorative-img
		&--yow-1
			height 460px
		&--yow-2
			height 650px
		
@media $desktop-widths

	.projects-reverse-block
		display flex
		flex-wrap wrap
		.projects-reverse-block__section
			display flex
			&:nth-child(odd)
				> *:first-child
					*
						text-align right
				> *:last-child
					*
						text-align left
			&:nth-child(even)
				> *:first-child
					order 2
					*
						text-align left
				> *:last-child
					*
						text-align right
			.projects-reverse-block__decorative-img
				width 60%
				margin 0
				background-size contain
			.projects-reverse-block__inner
				display flex
				flex-direction column
				justify-content center
				width 40%
				margin 0
					
	.projects-reverse-block__wrapper
		wrapper()
		
	.projects-reverse-block__decorative-img
		position relative
		&--yow-2
			left 17%
			background-image url("../images/yow/share-image-desktop.png")