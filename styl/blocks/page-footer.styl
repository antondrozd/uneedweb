.page-footer
	padding-top 3.125rem
	padding-bottom 2.5rem
	font-family $main-font
	color #576076
	a
		color #576076
	&--hp,
	&--services,
	&--services-slide,
	&--portfolio,
	&--contact-us
		background-color $main-color
	&--project-on-game
		color #6a6a6a
		background-color $main-color--on-game
		a
			color #6a6a6a
	
.page-footer__wrapper
	wrapper-fluid()
	text-align center
	
.page-footer__main-nav
	margin-bottom 2rem
	
.page-footer__contact
	margin-top 2rem
	margin-bottom 2rem
	text-align center
	
.page-footer__address
	margin-bottom 1rem
	font-size 14px
	font-weight 400
	font-style normal
	letter-spacing 0.3px

.page-footer__phone
	a
		display block
		font-size 14px
		font-weight 400
		letter-spacing 0.3px
		text-decoration none

.page-footer__email
	a
		display block
		font-size 14px
		font-weight 400
		letter-spacing 0.3px
		text-decoration none
		
.page-footer__copyrights
	padding 0
	margin 0
	font-size 14px
	font-weight 400
	letter-spacing 0.3px
	text-align center
	
// @media $tablet-widths

// 	.page-footer__subscribe
// 		width 60%
// 		margin 0 auto
		
@media $desktop-widths

	.page-footer__wrapper
		display flex
		flex-wrap wrap
		> *
			width 33.33%
			
	.page-footer__main-nav
		display flex
		align-items flex-start
		margin-bottom 0
		
	// .page-footer__subscribe
	// 	width auto
		
	.page-footer__contact
		margin 0
		text-align right
		
	.page-footer__copyrights
		position relative
		top -1.5rem
		text-align left