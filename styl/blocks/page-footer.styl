.page-footer
	padding-top 3.125rem
	padding-bottom 2.5rem
	font-family $main-font
	background-color $main-color
	
.page-footer__wrapper
	wrapper()
	text-align center
	
.page-footer__contact
	margin-top 2rem
	margin-bottom 2rem
	text-align center
	
.page-footer__address
	margin-bottom 1rem
	font-size 14px
	font-weight 400
	font-style normal
	letter-spacing 0.3px
	color #576076

.page-footer__phone
	a
		display block
		font-size 14px
		font-weight 400
		letter-spacing 0.3px
		text-decoration none
		color #576076
		
.page-footer__email
	a
		display block
		font-size 14px
		font-weight 400
		letter-spacing 0.3px
		text-decoration none
		color #576076
		
.page-footer__copyrights
	padding 0
	margin 0
	font-size 14px
	font-weight 400
	letter-spacing 0.3px
	text-align center
	color #576076