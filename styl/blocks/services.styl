.services
	margin-bottom 5rem

.services__list
	ul-reset()
	display flex
	flex-direction column
	
.services__item
	background-color #f3f8ff
	background-repeat no-repeat
	background-position top 25px center
	border solid 1px #e3eaf3
	&--project
		background-image url("../images/gif/outsource.gif")
	&--team
		background-image url("../images/gif/outstaff.gif")
	&--relocation
		background-image url("../images/gif/relocation.gif")
	
.services__item-wrapper
	wrapper()
	display flex
	flex-direction column
	align-items center
	justify-content center
	padding-top 11rem
	padding-bottom 3.125rem
	
.services__title
	padding 0
	margin 0
	margin-bottom 0.75rem
	font-size 18px
	font-weight bold
	letter-spacing 0.4px
	text-align center
	color #0e1a35
	
.services__recommend
	display block
	margin-bottom 1rem
	font-size 14px
	letter-spacing 0.3px
	text-align center
	color #8492af
	
.services__recommends-list
	ul-reset()
	box-sizing border-box
	width: 15rem
	padding-left 1.5rem
	margin 0 auto
	margin-bottom 1.25rem

.services__recommends-item
	position relative
	font-size 14px
	font-weight 400
	line-height 1.7
	color #0e1a35
	svg
		position absolute
		top 7px
		left -1.5rem
		margin-right 0.7rem
	
.services__link
	width 12.5rem
	text-align center
	
@media $tablet-widths

	.services__item
		background-position left 6.5rem top 2.5rem

	.services__item-wrapper
		align-items flex-start
		box-sizing border-box
		padding-top 3.125rem
		padding-left 15rem
	
	.services__recommends-list
		margin-right 0
		margin-left 0
		
@media $tablet-landscape-widths

	.services__list
		flex-direction row
		justify-content space-around
		
	.services__item
		background-position top 25px center
		background-size 32%
		
	.services__item-wrapper
		align-items center
		// width 32%
		max-width 20rem
		padding-top 9rem
		padding-left 0
		
@media $desktop-widths

	.services__list
		wrapper()