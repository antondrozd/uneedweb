.services
	margin-bottom 5rem

.services__list
	ul-reset()
	
.services__item
	background-color #f3f8ff
	border solid 1px #e3eaf3
	
.services__item-wrapper
	wrapper()
	display flex
	flex-direction column
	align-items center
	justify-content center
	padding-top 11rem
	padding-bottom 3.125rem
	
.services__title
	padding 0
	margin 0
	margin-bottom 0.75rem
	font-size 18px
	font-weight bold
	letter-spacing 0.4px
	text-align center
	color #0e1a35
	
.services__recommend
	display block
	margin-bottom 1rem
	font-size 14px
	letter-spacing 0.3px
	text-align center
	color #8492af
	
.services__-wrapper
	ul-reset()
	width: 15rem
	margin 0 auto
	margin-bottom 1.25rem

.services__
	padding-left 1.5rem
	font-size 14px
	font-weight 400
	line-height 1.7
	color #0e1a35
	
.services__link
	width 12.5rem
	text-align center