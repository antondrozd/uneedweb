.services
	margin-bottom 5rem

.services__list
	ul-reset()
	
.services__item
	background-color #f3f8ff
	background-repeat no-repeat
	background-position top 25px center
	border solid 1px #e3eaf3
	&--project
		background-image url("../images/gif/outsource.gif")
	&--team
		background-image url("../images/gif/outstaff.gif")
	&--relocation
		background-image url("../images/gif/relocation.gif")
	
.services__item-wrapper
	wrapper()
	display flex
	flex-direction column
	align-items center
	justify-content center
	padding-top 11rem
	padding-bottom 3.125rem
	
.services__title
	padding 0
	margin 0
	margin-bottom 0.75rem
	font-size 18px
	font-weight bold
	letter-spacing 0.4px
	text-align center
	color #0e1a35
	
.services__recommend
	display block
	margin-bottom 1rem
	font-size 14px
	letter-spacing 0.3px
	text-align center
	color #8492af
	
.services__recommends-list
	ul-reset()
	box-sizing border-box
	width: 15rem
	padding-left 1.5rem
	margin 0 auto
	margin-bottom 1.25rem

.services__recommends-item
	position relative
	margin-bottom 0.5rem
	font-size 14px
	font-weight 400
	color #0e1a35
	svg
		position absolute
		top 50%
		left -1.5rem
		transform translateY(-50%)
		margin-right 0.7rem
	
.services__link
	width 12.5rem
	text-align center