.project-switcher
	margin-top 1.5rem
	font-family $main-font

.project-switcher__wrapper
	wrapper()
	display flex
	justify-content space-between
	
.project-switcher__link
	display flex
	align-items center
	font-size 0
	transition all 0.3s
	svg
		*
			fill rgba(#333, 0.5)
			transition all 0.3s
	&--prev
		.project-switcher__arrow-icon
			margin-right 1rem
			svg
				transform rotate(180deg)
	&--next
		.project-switcher__arrow-icon
			margin-left 1rem
	&:hover, &:active
		color #333
		svg
			*
				fill #333
			
.project-switcher__arrow-icon
	display flex
	align-items center			
			
@media $tablet-widths

	.project-switcher__link
		font-size 16px
		letter-spacing 0.3px
		text-decoration none
		color rgba(#333, 0.5)
		
@media $desktop-widths

	.project-switcher__wrapper
		width 90%