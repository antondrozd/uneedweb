.project-switcher
	margin-top 1.5rem
	font-family $main-font
	&--on-game
		.project-switcher__link
			color #555
			svg
				*
					fill #555

.project-switcher__wrapper
	wrapper-fluid()
	display flex
	justify-content space-between
	
.project-switcher__link
	display flex
	align-items center
	font-size 0
	transition all $transition-duration
	svg
		*
			fill #8492af
			transition all $transition-duration
	&--prev
		.project-switcher__arrow-icon
			margin-right 1rem
			svg
				transform rotate(180deg)
	&--next
		.project-switcher__arrow-icon
			margin-left 1rem
	&:hover, &:active
		color #292a2b
		svg
			*
				fill #292a2b
			
.project-switcher__arrow-icon
	display flex
	align-items center			
			
@media $tablet-widths

	.project-switcher__link
		font-size 16px
		letter-spacing 0.3px
		text-decoration none
		color #8492af