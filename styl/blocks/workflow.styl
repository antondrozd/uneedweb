@media $tablet-widths

	.workflow__wrapper
		display flex
		flex-direction row-reverse
		padding-bottom 3rem

	.workflow__inner
		width 50%
		&--right
			.workflow__title
				padding-left 6rem
			.workflow__item
				padding-right 0
				padding-left 6rem
				&--tablet-position-1
					&::before
						box-shadow $workflow-item-shadow-ball-right $workflow-item-color-1
				&--tablet-position-2
					&::before
						box-shadow $workflow-item-shadow-ball-right $workflow-item-color-2
				&--tablet-position-3
					&::before
						box-shadow $workflow-item-shadow-ball-right $workflow-item-color-3			
				&--tablet-position-4
					&::before
						box-shadow $workflow-item-shadow-ball-right $workflow-item-color-4			
				&--tablet-position-5
					&::before
						box-shadow $workflow-item-shadow-ball-right $workflow-item-color-5			
				&--tablet-position-6
					&::before
						box-shadow $workflow-item-shadow-ball-right $workflow-item-color-6			
				&--tablet-position-7
					&::before
						box-shadow $workflow-item-shadow-ball-right $workflow-item-color-7			
				&--tablet-position-8
					&::before
						box-shadow $workflow-item-shadow-ball-right $workflow-item-color-8			
				&--tablet-position-9
					&::before
						box-shadow $workflow-item-shadow-ball-right $workflow-item-color-9			
				&--tablet-position-10
					&::before
						box-shadow $workflow-item-shadow-ball-right $workflow-item-color-10				
					span
				&::before
					left -0.5rem
				&::after
					left 0
				span
					&::before
						left 21px
					
		&--left
			.workflow__title
				padding-right 6rem
				text-align right
			.workflow__item
				justify-content flex-end
				padding-right 6rem
				padding-left 0
				text-align right
				&--tablet-position-1
					&::before
						box-shadow $workflow-item-shadow-ball-left $workflow-item-color-1
				&--tablet-position-2
					&::before
						box-shadow $workflow-item-shadow-ball-left $workflow-item-color-2
				&--tablet-position-3
					&::before
						box-shadow $workflow-item-shadow-ball-left $workflow-item-color-3
				&--tablet-position-4
					&::before
						box-shadow $workflow-item-shadow-ball-left $workflow-item-color-4
				&--tablet-position-5
					&::before
						box-shadow $workflow-item-shadow-ball-left $workflow-item-color-5
				&--tablet-position-6
					&::before
						box-shadow $workflow-item-shadow-ball-left $workflow-item-color-6
				&--tablet-position-7
					&::before
						box-shadow $workflow-item-shadow-ball-left $workflow-item-color-7
				&--tablet-position-8
					&::before
						box-shadow $workflow-item-shadow-ball-left $workflow-item-color-8
				&--tablet-position-9
					&::before
						box-shadow $workflow-item-shadow-ball-left $workflow-item-color-9
				&--tablet-position-10
					&::before
						box-shadow $workflow-item-shadow-ball-left $workflow-item-color-10
				&::before
					right -0.5rem
					left auto
				&::after
					right 0
				span
					&::before
						right 21px
					
	.workflow__item
		display flex
		align-items center
		box-sizing border-box
		height $workflow-item-height
		&--items-opposite-after-1
			margin-bottom $workflow-item-height
		&--items-opposite-after-2
			margin-bottom $workflow-item-height*2
		&--items-opposite-after-3
			margin-bottom $workflow-item-height*3
		&--items-opposite-after-4
			margin-bottom $workflow-item-height*4
		&--items-opposite-before-1
			margin-top $workflow-item-height
		&--tablet-hidden
			display none
		&--tablet-position-1
			animation-delay $animation-delay-step
			&::before
				background-color: $workflow-item-color-1
				box-shadow $workflow-item-shadow-ball-right $workflow-item-color-1
			&::after
				background-color $workflow-item-color-1
			span
				&::before
					background-color: $workflow-item-color-1
		&--tablet-position-2
			animation-delay $animation-delay-step*2
			&::before
				background-color: $workflow-item-color-2
				box-shadow $workflow-item-shadow-ball-right $workflow-item-color-2
			&::after
				background-color $workflow-item-color-2
			span
				&::before
					background-color: $workflow-item-color-2
		&--tablet-position-3
			animation-delay $animation-delay-step*3
			&::before
				background-color: $workflow-item-color-3
				box-shadow $workflow-item-shadow-ball-right $workflow-item-color-3
			&::after
				background-color $workflow-item-color-3
			span
				&::before
					background-color: $workflow-item-color-3
		&--tablet-position-4
			animation-delay $animation-delay-step*4
			&::before
				background-color: $workflow-item-color-4
				box-shadow $workflow-item-shadow-ball-right $workflow-item-color-4
			&::after
				background-color $workflow-item-color-4
			span
				&::before
					background-color: $workflow-item-color-4
		&--tablet-position-5
			animation-delay $animation-delay-step*5
			&::before
				background-color: $workflow-item-color-5
				box-shadow $workflow-item-shadow-ball-right $workflow-item-color-5
			&::after
				background-color $workflow-item-color-5
			span
				&::before
					background-color: $workflow-item-color-5
		&--tablet-position-6
			animation-delay $animation-delay-step*6
			&::before
				background-color: $workflow-item-color-6
				box-shadow $workflow-item-shadow-ball-right $workflow-item-color-6
			&::after
				background-color $workflow-item-color-6
			span
				&::before
					background-color: $workflow-item-color-6
		&--tablet-position-7
			animation-delay $animation-delay-step*7
			&::before
				background-color: $workflow-item-color-7
				box-shadow $workflow-item-shadow-ball-right $workflow-item-color-7
			&::after
				background-color $workflow-item-color-7
			span
				&::before
					background-color: $workflow-item-color-7
		&--tablet-position-8
			animation-delay $animation-delay-step*8
			&::before
				background-color: $workflow-item-color-8
				box-shadow $workflow-item-shadow-ball-right $workflow-item-color-8
			&::after
				background-color $workflow-item-color-8
			span
				&::before
					background-color: $workflow-item-color-8
		&--tablet-position-9
			animation-delay $animation-delay-step*9
			&::before
				background-color: $workflow-item-color-9
				box-shadow $workflow-item-shadow-ball-right $workflow-item-color-9
			&::after
				background-color $workflow-item-color-9
			span
				&::before
					background-color: $workflow-item-color-9
		&--tablet-position-10
			animation-delay $animation-delay-step*10
			&::before
				background-color: $workflow-item-color-10
				box-shadow $workflow-item-shadow-ball-right $workflow-item-color-10
			&::after
				background-color $workflow-item-color-10
			span
				&::before
					background-color: $workflow-item-color-10
		&::after
			content ""
			position absolute
			bottom -1.5rem
			width 1px
			height $workflow-item-line-vertical-size
		span
			&::before
				content ""
				position absolute
				top 50%
				width $workflow-item-line-horisontal-size
				height 1px
				transform translateY(-50%)