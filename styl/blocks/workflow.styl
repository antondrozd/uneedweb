$workflow-item-height = 5rem
$workflow-item-color-1 = #e25245
$workflow-item-color-2 = #cb5056
$workflow-item-color-3 = #b74e65
$workflow-item-color-4 = #a44c73
$workflow-item-color-5 = #a44c73
$workflow-item-color-6 = #8f4b82
$workflow-item-color-7 = #794992
$workflow-item-color-8 = #794992
$workflow-item-color-9 = #6b479d
$workflow-item-color-10 = #5b46a8
$workflow-item-shadow-ball-right = 20px 0px 0px -5px
$workflow-item-shadow-ball-left = -20px 0px 0px -5px
$workflow-item-line-horisontal-size = 4rem
$workflow-item-line-vertical-size = 3rem
$animation-delay-step = 0.3s

.workflow__wrapper
	wrapper-fluid()

.workflow__title
	padding 1.25rem 0
	margin 0
	font-size 18px
	font-weight 300
	letter-spacing 0.4px
	text-align left
	color #fefefe

.workflow__list
	ul-reset()
	
.workflow__item
	position relative
	padding 0.5rem 0 0.5rem 3rem
	font-size 14px
	font-weight 400
	letter-spacing 0.3px
	line-height 1.5
	color #8492af
	&::before
		content ""
		position absolute
		top 50%
		left 1rem
		width 1rem
		height 1rem
		border-radius 50%
		transform translateY(-50%)
	&--color-1
		&::before
			background-color $workflow-item-color-1
	&--color-2
		&::before
			background-color $workflow-item-color-2
	&--color-3
		&::before
			background-color $workflow-item-color-3
	&--color-4
		&::before
			background-color $workflow-item-color-4
	&--color-5
		&::before
			background-color $workflow-item-color-5
	&--color-6
		&::before
			background-color $workflow-item-color-6
	&--color-7
		&::before
			background-color $workflow-item-color-7
	&--color-8
		&::before
			background-color $workflow-item-color-8
	&--color-9
		&::before
			background-color $workflow-item-color-9
	&--color-10
		&::before
			background-color $workflow-item-color-10
		
