$animation-delay-step-rows = 0.15s
$animation-delay-step-logos = 0.2s

.on-game-score-block
	max-width 25rem
	margin 0 auto

.on-game-score-block__logos
	position relative
	display flex
	justify-content space-around
	height 206px
	background-image url("../images/on-game/bg-image.png")
	background-repeat no-repeat
	background-size cover
	background-position center
	
.on-game-score-block__inner
	display flex
	flex-direction column
	padding-top 1rem
	padding-bottom 2rem
	
.on-game-score-block__logo-wrapper
	position relative
	display flex
	align-items flex-start
	justify-content center
	flex-grow 1
	margin-bottom 1rem
	img
		position relative
		top 7%
		width 5rem
		animation-delay 0.6s
		
.on-game-score-block__text
	font-size 12px
	font-weight 500
	letter-spacing 1.2px
	text-transform uppercase
	text-align center
	color #ffffff
	&--dark
		color #555
	
.on-game-score-block__table
	width 100%
	border-spacing 0 0.5rem
	
.on-game-score-block__table-row
	align-items center
	background-color #f1f1f1
	border none
	&--grey
		background-color #e2e1e1
	&--dark
		background-color #303030
		.on-game-score-block__table-cell
			color #ffde2b
	for num in (1..5)
		&:nth-child({num})
			animation-delay $animation-delay-step-rows*num
			.on-game-score-block__table-cell
				&--logo
					animation-delay $animation-delay-step-logos*num
		
.on-game-score-block__table-cell
	padding 0
	font-size 12px
	font-weight 500
	letter-spacing 1.2px
	text-transform uppercase
	color #555555
	border none
	&:nth-child(4)
		text-align right
	&--logo
		width 28px
		height 28px
		padding 11px 14px
		background-repeat no-repeat
		background-position center
		background-size 28px
	&--columb
		background-image url("../images/on-game/columb-logo.png")
	&--united
		background-image url("../images/on-game/united-logo.png")
	&--score
		position relative
		top 2px
		font-size 16px
		text-align center
		color #555555
		
@media $tablet-widths

	.on-game-score-block
		max-width none
		width 25.125rem

	.on-game-score-block__logos
		height 260px
		margin 0.5rem 0
		
	.on-game-score-block__inner
		padding-top 3rem
		padding-bottom 3rem
		
@media $desktop-widths

	.on-game-score-block
		display flex
		justify-content space-between
		width 50rem
		> *
			width 48%
			
	.on-game-score-block__logos
		height 282px
		
		.on-game-score-block__inner
			padding-top 4rem
			padding-bottom 4rem