#portfolio-page
	
	#description
		padding-top: 7rem
		
	#switcher
		margin-top: 3rem
		margin-bottom: 3rem

	#projects
		.container
			padding: 0
			width: 100%
		.project
			position: relative
			width: 100%
			height: 400px
			background-size: cover
			border-bottom: 1px solid white
			background-image: url('/photos/travel/travel-portfolio-grid.png')
			&.travel
				background-image: url('/photos/travel/travel-portfolio-grid.png')
			&.sport
				background-image: url('/photos/sport/sport-portfolio-grid.png')
			&.yow
				background-image: url('/photos/YOW/YOW-portfolio-grid.png')
			.overlay, .project-content
				width: 100%
				height: 100%
				position: absolute
				top: 0
				left: 0
			.project-content
				display: flex
				flex-direction: column
				justify-content: space-between
			.project-footer
				display: flex
				flex-direction: column
			.overlay
				opacity: 0
				transition: opacity .3s ease
				background-color: #102640
			.name
				font-size: 18px
				letter-spacing: 0.4px
				text-align: center
				font-weight: 400
				color: white
			.description
				opacity: 0
				transition: opacity .3s ease
				font-size: 14px
				letter-spacing: 0.3px
				font-weight: 400
				padding: 0 2rem 3rem 2rem
				text-align: center
				color: rgba(248, 249, 251, 0.5)
			a
				text-align: center
				.details-button
					opacity: 0
					transition: opacity .3s ease
					bottom: 2rem
					width: 10rem
					margin: auto
					border: solid 2px #8492af
			&:hover, &:focus
				.overlay
					opacity: .5
				.description, .details-button
					opacity: 1
		@media screen and (min-width: $screenSmall)
			margin-top: 1rem
			.container
				display: flex
				flex-wrap: wrap
			.project
				width: 50%
				border-right: 1px solid white
		@media screen and (min-width: $screenMedium)
			.project
				width: 33.33%

#portfolio-page, #portfolio-project-page			
	h2.type
		font-size: 13px
		letter-spacing: 0.3px
		color: white
		opacity: .5
		text-transform: uppercase
		text-align: center
		padding: .5rem 0

#portfolio-project-page
	header
		background: transparent

	#landing
		padding-top: 3rem
		height 20rem
		position: relative
		background-image url('/photos/landing.jpg')
		background-size: 1200px
		background-position: 50% 25%
		background-repeat: no-repeat
		@media screen and (min-width: $screenSmall)
			background-size: cover

	#description
		padding: 2rem 0
		.type
			color: #8492af
		h1.title
			margin-top: 0
		.tags
			margin: 2rem 0
		@media screen and (min-width: $screenSmall)
			.tags
				margin: 2rem auto
				width: 40rem
			
	#approaches
		padding: 4rem 0
		background-size: cover
		background-image: url('/photos/travel/travel-image-1.png')
		h2.sub-title
			font-weight: 300
			color: #f3f8ff
		&.travel
			background-image: url('/photos/travel/travel-image-1.png')

	#gallery
		.container
			width: 100%
			padding: 0
			padding-bottom: 3rem
			.gallery-container
				height: 18rem
				width: 100%
				.slides
					height: 13rem
				&.travel
					.slide
						background-size: cover
						&:nth-child(1)
							background-image: url('/photos/travel/travel-gallery-1.png')
						&:nth-child(2)
							background-image: url('/photos/travel/travel-gallery-2.png')
				.dots
					height: 4rem
					width: 100%
					position: absolute
					bottom: 0
					left: 0
					display: flex
					justify-content: center
					align-items: center
					.dot-item
						border: none
						width: 10px
						height: 10px
						margin: 0 0.5rem
						background-color: #f3f8ff
						border: solid 1px #e3eaf3
						border-radius: 50%
						padding: 0
						&.active
							background-color: #8492af
						&:before
							content: none
			@media screen and (min-width: $screenSmall)
				.gallery-container
					height: 29rem
					.slides
						height: 25rem
			@media screen and (min-width: $screenMedium)
				.gallery-container
					margin: auto
					max-width: 700px
	#back
		padding-top: 2rem
		padding-bottom: 5rem
		text-align: center