#contact-us-result-page
	display: flex
	flex-direction: column
	#contact-result
		flex: 1
		padding-top: 7rem
		padding-bottom: 3rem
		@media screen and (min-width: $screenSmall)
			padding-top: 9rem
		@media screen and (min-width: $screenMedium)
			padding-top: 11rem
			padding-bottom: 5rem

#contact-us-page
	header
		width: 100%
		background: #0e1a35
		padding-bottom: 1rem
		@media screen and (min-width: $screenMedium)
			.menu-container
				display: flex
				align-items: center
	
	.body-wrapper
		background-image: linear-gradient(to bottom, #f6f7fa, #ffffff)

	#contact-heading
		padding-top: 7.6rem
		@media screen and (min-width: $screenMedium)
			h2.sub-title
				text-align: center
		
	#contact-body
		.contact-form
			max-width: 25rem
			margin: auto
			padding: 1rem 1rem 4rem 1rem
			h1.title
				display: none
			form
				display: flex
				flex-direction: column
				justify-content: center
				input, textarea
					margin-bottom: 1rem
				textarea
					resize: none
		.contact-info
			padding: 3rem
			background-color: #0e1a35
			box-shadow: 0 0 14px 0 rgba(14, 26, 53, 0.2)
			.icon
				margin-right: .9rem
			.details
				h1
					font-size: 21px
					line-height: 1.14
					font-weight: 400
					text-align: left
					color: #8492af
			.contacts
				font-size: 16px
				line-height: 1.5
				text-align: left
				color: #8492af
				.services
					a
						margin-right: .5rem
				address
					font-style: normal
					width: 15rem
			.contacts, .details
				width: 13rem
				margin: auto
		@media screen and (min-width: $screenMedium)
			display: flex
			width: 60rem
			margin: auto
			background-color: #ffffff
			box-shadow: 0 0 14px 0 rgba(14, 26, 53, 0.2)
			margin-bottom: 5rem
			.contact-form, .contact-info
				width: 50%
			.contact-info
				padding: 3rem 1rem
			.contact-form
				padding: 2.5rem 0
				h1.title
					display: block
					font-size: 21px
					font-weight: 400
					text-align: left
					line-height: 1.14
					color: #0e1a35
					margin-bottom: 3rem
			.contact-info
				padding: 2.5rem 3rem
				flex-direction: column
				.details
					margin-bottom: 7rem
				.contacts
					margin: 0