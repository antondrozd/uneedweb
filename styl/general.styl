html, body
	height 100%
	margin 0

*
	box-sizing: border-box

.flex
	display flex
	&.flex-row
		flex-direction row
	&.flex-column
		flex-direction column
	&.align-hor-center
		justify-content center
	&.align-ver-center
		align-items center

a
	text-decoration: none
	color: #576076
	button
		&:hover, &:focus
			color: white
			svg
				path
					fill: white
	&.underlined
		&:hover
			text-decoration: underline
	&:visited
		text-decoration: none
		color: #576076

button, input, textarea
	outline: none

input, textarea
	width: 100%
	border-radius: 4px
	border: solid 1px #8492af
	padding: 1rem
	color: #576076
	&::-webkit-input-placeholder
		font-size: 13px
		font-family: 'Roboto'
		font-weight: 400
		line-height: 1.38
		letter-spacing: 0.3px
		text-align: left
		color: rgba(87, 96, 118, 0.5)

button
	cursor: pointer
	padding: .9rem 2.8rem
	border-radius: 4px
	background-color: transparent
	border: solid 2px #8492af
	font-size: 16px
	letter-spacing: .3px
	color: #8492af
	position: relative
	transition: color .3s, border-color .3s ease
	z-index: 0
	&.white
		&:hover, &:focus
			color: white
			border-color: white
			&:before
				content: none
	&.black
		&:hover, &:focus
			color: #0e1a35
			border-color: #0e1a35
			&:before
				content: none
	svg
		path
			transition: fill .3s ease
	span
		&.icon
			margin-left: .7rem
			vertical-align: middle
		&.rotated
			margin-left: 0
			margin-right: .7rem
	&:before
		position: absolute
		z-index: -1
		content: ''
		top: 0
		left: 0
		border-radius: 2px
		background-color: #ff6955
		transition: width .3s ease
		height: 100%
		width: 0%
	&:hover, &:focus
		border-color: #ff6955
		a
			color: white
		&:before
			width: 100%

h1.title
	font-family Roboto
	font-size 30px
	font-weight 100
	text-align center
	color #ffffff
	&.dark
		color: #0e1a35
	@media screen and (min-width: $screenMedium)
		font-size: 60px
		font-weight: 100
	
h2.sub-title
	font-size: 16px
	font-weight: 400
	line-height: 1.5
	text-align: center
	color: #8492af
	@media screen and (min-width: $screenMedium)
		width: 40rem
		margin: auto
		font-size: 18px
		line-height: 1.33

.gradient
	height: 6px
	width: 100%
	background-image: linear-gradient(to left, #4444b9, #ec523e)
	
.container
	padding 0 1.5rem
	margin-right auto
	margin-left auto

	@media screen and (min-width: $screenSmall)
		width: 750px

	@media screen and (min-width: $screenMedium)
		width: 970px

	@media screen and (min-width: $screenLarge)
		width: 1170px

body
	font-weight: 300
	font-size: 16px
	line-height: 1.5
	font-family: 'Roboto'
	-webkit-font-smoothing: antialiased
	text-rendering: optimizelegibility
	overflow-x: hidden
	
	&.navbar-expanded
		.mobile-nav
			transform: translateY(0)
		#toggle-navbar
			justify-content: center
			.icon-bar:nth-child(1)
				transform: rotate(-45deg) translateY(2px)
			.icon-bar:nth-child(2)
				display: none
			.icon-bar:nth-child(3)
				transform: rotate(45deg) translateY(-2px)

.mobile-nav
	position: fixed
	width: 100%
	height: 100%
	transition: transform .3s ease
	transform: translateY(-100%)
	background-color: #0e1a35
	z-index: 1
	padding: 2rem 0
	overflow-y: auto
	.menu-list
		padding-top: 2rem
		.menu-item
			font-size: 16px
			text-transform: uppercase
			line-height: 3.75
			font-weight: 400
			&:hover
				color: #ffffff

.tags
	display: flex
	flex-wrap: wrap
	justify-content: center
	.tag
		font-size: 13px
		color: #8092ba
		font-weight: 400
		margin: .3rem
		padding: .5rem 1rem
		border-radius: 15px
		background-color: #f3f8ff
		border: solid 1px #e3eaf3

header
	position: absolute
	width: 100%
	z-index: 1
	background: #0e1a35
	padding-bottom: 1rem
	nav
		display: flex
		align-items: center
		margin-top: 1rem
		.container
			padding-left: 1rem
		.menu-container
			display: none
		.logo-container
			display: flex
			align-items: center
		.logo
			margin-right: .5rem
			width: 43px
			height: 48px
			background: linear-gradient(155deg, #ec523e 0%, #4444b9 80%)
			-webkit-mask-image: url('/images/svg/logo/42x48/logo-42x48.svg')
			mask-image: url('/images/svg/logo/42x48/logo-42x48.svg')
		.logo-text-container
			width: 75px
			height: 28px
			background-image: url('/images/svg/logo/42x48/text-logo-42x48.svg')
			background-repeat: no-repeat
	@media screen and (min-width: $screenSmall)
		width: 100%
		.container
			width: 100%
		nav
			justify-content: space-between
			.logo
				width: 52px
				height: 59px
				-webkit-mask-image: url('/images/svg/logo/big/logo-e—Öp.svg')
				mask-image: url('/images/svg/logo/big/logo-exp.svg')
			.logo-text-container
				display: none
			.menu-container
				display: flex
				.menu-list
					display: flex
					.menu-item
						cursor: pointer
						position: relative
						padding: 0 1rem
						font-weight: 400
						color: white
						&:after
							content: ''
							position: absolute
							height: 2px
							left: 0
							bottom: 6px
							width: 0%
							right: 0
							margin: auto
							transition: width .3s ease
							background-image: linear-gradient(to left, #ec523e, #4444b9)
						&:hover
							&:after
								width: 80%

	@media screen and (min-width: $screenMedium)
		.menu-container
			display: flex
			align-items: center
		.container
			padding: 1rem 2rem
		nav
			align-items: stretch
			.logo
				margin-right: 1rem
			.logo-text-container
				display: flex !important
				width: 113px
				height: 41px
				background-image: url('/images/svg/logo/big/text-logo.svg')
				background-repeat: no-repeat

.swipeshow.autoheight
	height: auto
	.slide
		height: auto
		position: static
	.slides
		height: 100%
		position: relative
		display: flex
		flex-direction: row
		flex-wrap: nowrap
		
	.dots
		height: 4rem
		width: 100%
		display: flex
		justify-content: center
		align-items: center
		.dot-item
			border: none
			width: 10px
			height: 10px
			margin: 0 0.5rem
			background-color: #f3f8ff
			border: solid 1px #e3eaf3
			border-radius: 50%
			padding: 0
			&.active
				background-color: #8492af
			&:before
				content: none

#switcher
	margin: 0 1rem
	border-bottom: 1px solid #e4e4f1
	display: flex
	justify-content: space-between
	align-items: center
	#switch-left, #switch-right
		height: 2rem
		width: 2rem
		display: flex
		justify-content: center
		align-items: center
		cursor: pointer
	#switch-right
		svg
			transform: rotate(180deg)
	h2
		width: auto
		font-size: 13px
		letter-spacing: 0.3px
		text-transform: uppercase
		position: relative
		font-weight: 400
	a
		display: none
		&.active
			display: block
			h2
				&:after
					content: ''
					width: 11rem
					height: 2px
					background-color: #8492af
					position: absolute
					bottom: -12px
					margin: auto
					left: 50%;
					transform: translate(-50%, 0);
	@media screen and (min-width: $screenSmall)
		justify-content: center
		width: 722px
		margin: auto
		a
			display: block
			h2
				margin: 1rem 0
				cursor: pointer
				padding-left: 1rem
				padding-right: 1rem
			&.active
				h2:after
					width: 100%
					bottom: -17px
		#switch-left, #switch-right
			display: none

		
#toggle-navbar
	background-color: transparent
	border: none
	position: fixed
	z-index: 2
	top: 1.6rem
	right: 1rem
	height: 1.4rem
	width: 2rem
	cursor: pointer
	display: flex
	flex-direction: column
	justify-content: space-between
	.icon-bar
		height: 4px
		width: 100%
		border-radius: 2px
		background-color: white
		transition: transform .3s ease
	@media screen and (min-width: $screenSmall)
		display: none
	
.menu-list
	.menu-item
		font-size: 15px
		line-height: 3.0
		letter-spacing: 0.3px
		text-align: center
		color: #8492af
		transition: color .3s ease
		&:hover
			color: #c3cee4
			
footer
	padding: 2rem 0
	background-color: #0e1a35
	.subscribe
		h1
			margin: 2rem 0
			font-size: 18px
			text-align: center
			color: #f3f8ff
		.subscribe-form
			display: flex
			flex-direction: row
			input
				border-radius: 4px 0 0 4px
				background-color: #0e1a35
				border: solid 1px #576076
				padding: 1rem
				color: #576076
				flex: 1
				&::-webkit-input-placeholder
					font-size: 13px
					line-height: 1.38
					letter-spacing: 0.3px
					color: rgba(90, 99, 121, 0.5)
			button
				position: relative
				left: -1px
				border-radius: 0 4px 4px 0
				background-color: #576076
				font-size: 13px
				line-height: 1.38
				letter-spacing: 0.3px
				color: #ffffff
				border: none
				&:before
					background-color: #8492af
	.contacts
		margin: 2rem auto
		width: 11rem
		font-size: 13px
		text-align: center
		color: #576076
		p
			margin: 0
		address
			font-style: normal
			margin-bottom: 1rem
			
	.copyright
		font-size: 13px
		line-height: 2.31
		text-align: center
		color: #5a6379
		&.desktop
			display: none
		
	@media screen and (min-width: $screenSmall)
		.subscribe-form
			width: 20rem
			margin: auto
	
	@media screen and (min-width: $screenMedium)
		.container
			width: 100%
			display: flex
			justify-content: space-between
			align-items: center
			.menu-container
				.menu-list
					display: flex
					.menu-item
						margin: 0 1rem
						&:hover
							a
								color: white
			.contacts
				margin: 0
				text-align: left
			.subscribe
				h1
					text-align: left
					margin: 0 0 1rem 0
			.copyright.desktop
				display: block
				text-align: left
				margin-left: 1rem
			.copyright.mobile
				display: none
		