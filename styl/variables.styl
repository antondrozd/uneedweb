@keyframes enterScale
	0%
		transform: scale(1.2)
	100%
		transform: scale(1.0)

@keyframes pop
	0%
		opacity:0
		transform: scale(.5)
	50%
		opacity: 1
	100%
		opacity: 1
		transform: scale(1)
		
@keyframes appear
	0%
		transform: scale(0)
		opacity: 0
	100%
		opacity: 1
		transform: scale(1)

@keyframes disappear
	0%
		transform: scale(1)
		opacity: 1
	100%
		opacity: 0
		transform: scale(0)
		display: none

@keyframes jumping
	0%
		transform: translateY(0)
	50%
		transform: translateY(7px)
	100%
		transform: translateY(0)