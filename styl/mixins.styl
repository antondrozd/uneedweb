wrapper()
	width: 280px
	margin: 0 auto
	@media $tablet-widths
		width: 648px
		
	@media $desktop-widths
		width: 1200px
		
	@media $desktop-large-widths
		width 1400px

clearfix()
	&::after
		content: ""
		display: table
		clear: both

ul-reset()
	margin: 0
	padding: 0
	list-style: none


visually-hidden()
	position: absolute
	width: 1px
	height: 1px
	margin: -1px
	padding: 0
	border: 0
	clip: rect(0 0 0 0)
	overflow: hidden


max-font-size($size)
	@media (min-height: 700px)
		font-size: $size

bottom-with-gradient($from, $to)
	position relative
	&::after
		content ""
		position absolute
		bottom 0
		left 0
		width 100%
		height 6px
		background-image linear-gradient(to left, $from, $to)